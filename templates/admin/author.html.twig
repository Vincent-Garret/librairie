{% extends 'admin/base.html.twig' %}
{% block content %}
    <div class = "article">
        <h1>{{ authors.name|upper}}</h1>
        <p>{{ authors.firstName|upper }}</p>
        <!--je met un date a mon twig sinon ca me pete une erreur comme quoi il peut pas lire une date-->
        <p>{{ authors.birthDate|date('d-m-Y') }}</p>
        <p>{{ authors.deathDate|date('d-m-Y') }}</p>
        <p>{{ authors.biography }}</p>

        <p>Livres : </p>
            {% for book in authors.books %}
                <p>{{ book.title }}</p>
            {% endfor %}
    </div>

{% endblock %}

